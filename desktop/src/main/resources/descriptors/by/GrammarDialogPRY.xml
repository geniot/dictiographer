                        <textfield id="singularNV"><gridbagconstraints fill="GridBagConstraints.HORIZONTAL" insets="5,5,5,5" gridx="3" gridy="5" ipadx="0" ipady="0" weightx="1" weighty="0"/></textfield>

                        <label text="label.naz.case.instrumentive"><gridbagconstraints anchor="GridBagConstraints.EAST" insets="5,5,5,5" gridx="0" gridy="6" ipadx="0" ipady="0" weightx="0" weighty="0"/></label>
