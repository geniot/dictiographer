                    </panel>


                    <panel border="TitledBorder(label.pry.declination.plural)"  layout="GridBagLayout">

                        <label text="label.pry.gender.male"><gridbagconstraints anchor="GridBagConstraints.WEST" insets="5,5,5,5" gridx="1" gridy="0" ipadx="0" ipady="0" weightx="0" weighty="0"/></label>
                        <label text="label.pry.gender.female"><gridbagconstraints anchor="GridBagConstraints.WEST" insets="5,5,5,5" gridx="2" gridy="0" ipadx="0" ipady="0" weightx="0" weighty="0"/></label>
                        <label text="label.pry.gender.neutral"><gridbagconstraints anchor="GridBagConstraints.WEST" insets="5,5,5,5" gridx="3" gridy="0" ipadx="0" ipady="0" weightx="0" weighty="0"/></label>


