                        <textfield id="pluralNR"><gridbagconstraints fill="GridBagConstraints.HORIZONTAL" insets="5,5,5,5" gridx="3" gridy="3" ipadx="0" ipady="0" weightx="1" weighty="0"/></textfield>

                        <label text="label.naz.case.dative"><gridbagconstraints anchor="GridBagConstraints.EAST" insets="5,5,5,5" gridx="0" gridy="4" ipadx="0" ipady="0" weightx="0" weighty="0"/></label>
                        <textfield id="pluralMD"><gridbagconstraints fill="GridBagConstraints.HORIZONTAL" insets="5,5,5,5" gridx="1" gridy="4" ipadx="0" ipady="0" weightx="1" weighty="0"/></textfield>
                        <textfield id="pluralZD"><gridbagconstraints fill="GridBagConstraints.HORIZONTAL" insets="5,5,5,5" gridx="2" gridy="4" ipadx="0" ipady="0" weightx="1" weighty="0"/></textfield>
                        <textfield id="pluralND"><gridbagconstraints fill="GridBagConstraints.HORIZONTAL" insets="5,5,5,5" gridx="3" gridy="4" ipadx="0" ipady="0" weightx="1" weighty="0"/></textfield>

                        <label text="label.naz.case.accusative"><gridbagconstraints anchor="GridBagConstraints.EAST" insets="5,5,5,5" gridx="0" gridy="5" ipadx="0" ipady="0" weightx="0" weighty="0"/></label>
                        <textfield id="pluralMV"><gridbagconstraints fill="GridBagConstraints.HORIZONTAL" insets="5,5,5,5" gridx="1" gridy="5" ipadx="0" ipady="0" weightx="1" weighty="0"/></textfield>
                        <textfield id="pluralZV"><gridbagconstraints fill="GridBagConstraints.HORIZONTAL" insets="5,5,5,5" gridx="2" gridy="5" ipadx="0" ipady="0" weightx="1" weighty="0"/></textfield>
                        <textfield id="pluralNV"><gridbagconstraints fill="GridBagConstraints.HORIZONTAL" insets="5,5,5,5" gridx="3" gridy="5" ipadx="0" ipady="0" weightx="1" weighty="0"/></textfield>

                        <label text="label.naz.case.instrumentive"><gridbagconstraints anchor="GridBagConstraints.EAST" insets="5,5,5,5" gridx="0" gridy="6" ipadx="0" ipady="0" weightx="0" weighty="0"/></label>
                        <textfield id="pluralMT"><gridbagconstraints fill="GridBagConstraints.HORIZONTAL" insets="5,5,5,5" gridx="1" gridy="6" ipadx="0" ipady="0" weightx="1" weighty="0"/></textfield>
                        <textfield id="pluralZT"><gridbagconstraints fill="GridBagConstraints.HORIZONTAL" insets="5,5,5,5" gridx="2" gridy="6" ipadx="0" ipady="0" weightx="1" weighty="0"/></textfield>
                        <textfield id="pluralNT"><gridbagconstraints fill="GridBagConstraints.HORIZONTAL" insets="5,5,5,5" gridx="3" gridy="6" ipadx="0" ipady="0" weightx="1" weighty="0"/></textfield>

                        <label text="label.naz.case.locative"><gridbagconstraints anchor="GridBagConstraints.EAST" insets="5,5,5,5" gridx="0" gridy="7" ipadx="0" ipady="0" weightx="0" weighty="0"/></label>
