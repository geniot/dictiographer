                        <textfield id="pluralNN"><gridbagconstraints fill="GridBagConstraints.HORIZONTAL" insets="5,5,5,5" gridx="3" gridy="2" ipadx="0" ipady="0" weightx="1" weighty="0"/></textfield>

                        <label text="label.naz.case.genitive"><gridbagconstraints anchor="GridBagConstraints.EAST" insets="5,5,5,5" gridx="0" gridy="3" ipadx="0" ipady="0" weightx="0" weighty="0"/></label>
                        <textfield id="pluralMR"><gridbagconstraints fill="GridBagConstraints.HORIZONTAL" insets="5,5,5,5" gridx="1" gridy="3" ipadx="0" ipady="0" weightx="1" weighty="0"/></textfield>
