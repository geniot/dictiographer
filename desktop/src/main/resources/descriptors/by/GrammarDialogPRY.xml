                        <textfield id="singularMM"><gridbagconstraints fill="GridBagConstraints.HORIZONTAL" insets="5,5,5,5" gridx="1" gridy="7" ipadx="0" ipady="0" weightx="1" weighty="0"/></textfield>
                        <textfield id="singularZM"><gridbagconstraints fill="GridBagConstraints.HORIZONTAL" insets="5,5,5,5" gridx="2" gridy="7" ipadx="0" ipady="0" weightx="1" weighty="0"/></textfield>
