<?xml version="1.0" encoding="UTF-8"?>
<panel id="mainPanel"  bundle="DictiographerResource"  constraints="BorderLayout.CENTER" layout="BorderLayout">
    <splitpane id="splitPane" DividerLocation="500" constraints="BorderLayout.CENTER">
        <panel constraints="BorderLayout.CENTER" layout="BorderLayout">
            <scrollpane constraints="BorderLayout.CENTER" id="scrollPane">
                <panel id="contentPanel" Layout="FlowLayout(FlowLayout.LEFT)">
                </panel>
            </scrollpane>
        </panel>

        <panel id="contentPanel2" layout="BorderLayout">
            <panel border="EmptyBorder(5,5,5,5)" constraints="BorderLayout.NORTH" layout="BorderLayout">
                <panel border="EmptyBorder(0,0,0,5)" constraints="BorderLayout.CENTER" layout="BorderLayout">
                    <textfield id="anchorTextField" constraints="BorderLayout.CENTER"/>
                </panel>

                <button action="addAction"
                        id="addButton"
                        enabled="false"
                        icon="images/add.png"
                        maximumSize="30,30" minimumSize="30,30" preferredSize="30,30" size="30,30"
                        constraints="BorderLayout.EAST"/>
            </panel>

            <panel border="EmptyBorder(0,5,5,5)" constraints="BorderLayout.CENTER" layout="BorderLayout">
                <scrollpane>
                    <list selectionMode="ListSelectionModel.SINGLE_SELECTION" id="anchorsList"></list>
                </scrollpane>
            </panel>

            <panel border="EmptyBorder(0,0,5,5)" constraints="BorderLayout.EAST" layout="BorderLayout">
                <vbox constraints="BorderLayout.NORTH">
                    <button action="deleteAction"
                            enabled="false"
                            id="deleteButton"
                            icon="images/delete.png"
                            maximumSize="30,30" minimumSize="30,30" preferredSize="30,30" size="30,30"
                            />
                    <label maximumSize="5,5" minimumSize="5,5" preferredSize="5,5" size="5,5"/>
                    <button action="upAction"
                            id="upButton"
                            enabled="false"
                            icon="images/arrow_up.png"
                            maximumSize="30,30" minimumSize="30,30" preferredSize="30,30" size="30,30"
                            />
                    <label maximumSize="5,5" minimumSize="5,5" preferredSize="5,5" size="5,5"/>
                    <button action="downAction"
                            id="downButton"
                            enabled="false"
                            icon="images/arrow_down.png"
                            maximumSize="30,30" minimumSize="30,30" preferredSize="30,30" size="30,30"
                            />
                    <label maximumSize="5,5" minimumSize="5,5" preferredSize="5,5" size="5,5"/>
                    <button action="chooseImageAction"
                            icon="images/image16.png"
                            maximumSize="30,30" minimumSize="30,30" preferredSize="30,30" size="30,30"
                            />
                </vbox>
            </panel>

        </panel>
    </splitpane>
</panel>
