<?xml version="1.0" encoding="UTF-8"?>
<panel id="mainPanel"  bundle="DictiographerResource"  constraints="BorderLayout.CENTER" layout="GridBagLayout">
    <!--0-->
    <label text="label.idiom">
        <gridbagconstraints anchor="GridBagConstraints.EAST" insets="5,5,5,5"
                            gridx="0" gridy="0"
                            ipadx="0" ipady="0" weightx="0" weighty="0"/>
    </label>
    <panel layout="BorderLayout">
        <gridbagconstraints fill="GridBagConstraints.HORIZONTAL" insets="5,5,5,5"
                            gridx="1" gridy="0"
                            gridwidth="3"
                            ipadx="0" ipady="0" weightx="1" weighty="0"/>
        <textfield constraints="BorderLayout.CENTER" id="idioom"/>
    </panel>
    <!--1-->
    <label text="label.explanations">
        <gridbagconstraints anchor="GridBagConstraints.NORTHEAST" insets="5,5,5,5"
                            gridx="0" gridy="1"
                            ipadx="0" ipady="0" weightx="0" weighty="0"/>
    </label>
    <dndtabbedpane id="idDndTabbedPane" boundModelClassName="com.dictiographer.desktop.model.entry.IdiomExplanation" titleNamingType="INDEX_TO_ALPHABET"
                   tabContentClassName="com.dictiographer.desktop.view.panels.IdiomExplanationPanel">
        <gridbagconstraints fill="GridBagConstraints.BOTH" insets="5,5,5,5"
                            gridx="1" gridy="1"
                            ipadx="0" ipady="0" weightx="1" weighty="1"/>
    </dndtabbedpane>
</panel>
